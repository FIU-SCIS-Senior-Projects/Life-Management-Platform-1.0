                            <h3 class="fs-anim-lower fs-anim-upper">What are you passionate about?</h3>
                            <div class="fs-anim-lower fs-anim-upper" id="passiontab">
                                @{Html.RenderAction("Passion", "SprintActivities", new { id = Model.Id });}
                            </div>
                        </div>
                       

                    </li>
                    <li >
                        <div class="cycle-tab fs-anim-lower fs-anim-upper" style="background-color: coral">


                            <h3 class="fs-anim-lower fs-anim-upper">How would you give back to society?</h3>
                            <div class="fs-anim-lower fs-anim-upper" id="gbtab">
                                @{Html.RenderAction("GivingBack", "SprintActivities", new { id = Model.Id });}
                            </div>
                        </div>
                    </li>
                  

                </ol><!-- /fs-fields -->
            @Html.ActionLink("Save Activities","Index", "DashBoard", null, new {@class= "fs-submit btn btn-success" })
            </form><!-- /fs-form -->
        </div><!-- /fs-form-wrap -->
        <!-- Related demos -->
    </div> <!-- /container -->
</div>

