@model List<LifeManagement.Models.SprintActivities>
@{
    ViewBag.Title = "JoyTab";
}

<link href="~/Content/ActCalendar.css" rel="stylesheet" />
<h2>JoyTab</h2>
<div class="panel">


    <table class="table">
        <tr>
            <td>Activity</td>
            <td>Progress</td>
            <td>Target</td>
            <td>Actual</td>
            <td>Activity Score</td>
            <td>Category Score</td>
            <td>Cycle Score</td>
            <td>Goal</td>
        </tr>
        @foreach (var act in Model)
        {


            <tr>
                <td>
                    @act.Activity.Name <br />
                    -@act.Specifics
                </td>
                <td>
                    @{
                        var currentDay = act.Sprint.DateFrom;

                        for (int i = 0; i < 15; i++)
                        {
                            <a class="callink" href="#">
                                <div class="caldaydiv">
                                    @currentDay.Day
                                </div>
                            </a>
                            currentDay = currentDay.AddDays(1);
                        }
                    }
                </td>
                <td>12</td>
                <td>Actual</td>
                <td>Activity Score</td>
                <td>Category Score</td>
                <td>Cycle Score</td>
                <td>Goal</td>
            </tr>
                        }
    </table>
</div>

