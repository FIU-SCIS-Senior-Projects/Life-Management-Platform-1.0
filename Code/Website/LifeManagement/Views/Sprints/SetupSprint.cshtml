<script src="~/Scripts/CatTiles.js"></script>
<link href="~/Content/CatTiles.css" rel="stylesheet" />


@{
    Layout = "~/Views/Shared/_layout_for_questionarie.cshtml";
}

@section AddToHead{
    <link rel="stylesheet" type="text/css" href="~/Content/bety_css/normalize.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bety_css/demo.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bety_css/component.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bety_css/cs-select.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bety_css/cs-skin-boxes.css" />
    <script src="~/Scripts/bety_scripts/modernizr.custom.js"></script>
}

<div class="modal-body" style="width: 1200px ; height: 750px; position: absolute; top: 30px ; margin:0 auto ; ">
    <div class="container" style="background: url('/Imgs/bety_new_img/wave.jpg') no-repeat; background-size: 100%;">
        <div class="fs-form-wrap" id="fs-form-wrap">
            <div class="fs-title">
                
                <h1 style="font-weight: bold"> Productivity week setup </h1>
                <br />
                <div style=" width: 1050px ; height: 50px; font-size: 14px ; position: absolute; left: 50px">
                    <h1 style=" color: #195BA4; font-weight: bold">Note: <br />   Leave it blank if you'd like to keep your goal for the last period. </h1>
                </div>
            </div>


            <form id="myform" class="fs-form fs-form-full" autocomplete="off" action="@Url.Action("SetupSprint", "Users")" method="post">
                <ol class="fs-fields">
                    <li>
                        <label class="fs-field-label fs-anim-upper" for="JoyGoal" style="color: black ; font-weight: 800" data-info="Goals - are broad open ended statements to achieve your vision. They describe what you want to achieve through your efforts."> Enter a goal for this period that gives you joy, or leave it blank if want to use the one from previous period.</label>
                        <textarea class="fs-anim-lower" id="JoyGoal" name="JoyGoal" placeholder="Enter a goal that gives you Joy"></textarea>
                    </li>

                    <li>
                        <label class="fs-field-label fs-anim-upper" for="PassionGoal" style="color: black ; font-weight: 800" data-info="Goals - are broad open ended statements to achieve your vision. They describe what you want to achieve through your efforts."> Enter a goal for this period that you are passionate about, or leave it blank if want to use the one from previous period.</label>
                        <textarea class="fs-anim-lower" id="PassionGoal" name="PassionGoal" placeholder="Enter a goal that you are really passionate about"></textarea>
                    </li>

                    <li>
                        <br />
                        <label class="fs-field-label fs-anim-upper" for="GiveBGoal" style="color: black ; font-weight: 800" data-info="Goals - are broad open ended statements to achieve your vision. They describe what you want to achieve through your efforts."> Enter a goal for this period to give back to others, or leave it blank if want to use the one from previous period. </label>
                        <textarea class="fs-anim-lower" style=" font:14px " id="GiveBGoal" name="GiveBGoal" placeholder="Enter a goal that you to give back to the society"></textarea>
                        <br />
                        <br />

                        <div class="fs-radio-group fs-radio-custom clearfix fs-anim-lower">
                            <img src="~/Imgs/bety_new_img/smart_ok.png" width="600" height="200" />
                        </div>

                    </li>
                   
                    <li>
                        <div class="cycle-tab fs-anim-lower fs-anim-upper" style="background-color: cadetblue">
                            <label class="fs-field-label fs-anim-upper" style=" font-weight: 800" data-info="Select upto 3 activities that give you joy">What gives you joy?</label>

                            <div class="fs-anim-lower fs-anim-upper activities-div" id="joytab">
                                @{Html.RenderAction("Joy", "SprintActivities", new { id = ViewBag.newSprint.Id });}
                            </div>
                        </div>


                    </li>
                    <li>
                        <div class="cycle-tab fs-anim-lower fs-anim-upper" style="background-color: #ffb3b3">
                            <label class="fs-field-label fs-anim-upper" style=" font-weight: 800" data-info="Select upto 2 activities that you are really passionate about">What are you passionate about?</label>

                            <div class="fs-anim-lower fs-anim-upper activities-div" id="passiontab">
                                @{Html.RenderAction("Passion", "SprintActivities", new { id = ViewBag.newSprint.Id });}
                            </div>
                        </div>


                    </li>
                    <li>
                        <div class="cycle-tab fs-anim-lower fs-anim-upper" style="background-color: #ffa366">

                            <label class="fs-field-label fs-anim-upper" for="vision" style=" font-weight: 800" data-info="Select upto 2 activities that give you a sense of fulfilment from giving back or helping others">How would you give back to society?</label>

                            <div class="fs-anim-lower fs-anim-upper activities-div" id="gbtab">
                                @{Html.RenderAction("GivingBack", "SprintActivities", new { id = ViewBag.newSprint.Id });}
                            </div>
                        </div>
                    </li>


                </ol><!-- /fs-fields -->

                <button class="fs-submit" type="submit">Send answers</button>
            </form><!-- /fs-form -->
        </div><!-- /fs-form-wrap -->
        <!-- Related demos -->
    </div> <!-- /container -->
</div>

<script src="~/Scripts/bety_scripts/classie.js"></script>
<!--     <script src="~/Scripts/bety_scripts/selectFx.js"></script>   -->
<script src="~/Scripts/bety_scripts/fullscreenForm.js"></script>
<script>
                (function () {
                    var formWrap = document.getElementById('fs-form-wrap');

                    [].slice.call(document.querySelectorAll('select.cs-select')).forEach(function (el) {
                        new SelectFx(el, {
                            stickyPlaceholder: false,
                            onChange: function (val) {
                                document.querySelector('span.cs-placeholder').style.backgroundColor = val;
                            }
                      });
                    });

                    new FForm(formWrap, {
                        onReview: function () {
                            classie.add(document.body, 'overview'); // for demo purposes only
                        }
                    });
                })();
</script>

